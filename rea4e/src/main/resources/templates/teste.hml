<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recursos por Autor</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }
        h1 {
            color: #333;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background-color: #fff;
            margin: 5px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Recursos Educacionais Abertos por Autor</h1>
    <input type="number" id="autorId" placeholder="ID do Autor" />
    <button onclick="listarRecursos()">Listar Recursos</button>
    <ul id="recursosList"></ul>

    <script>
        async function listarRecursos() {
            const autorId = document.getElementById('autorId').value;
            const recursosList = document.getElementById('recursosList');
            recursosList.innerHTML = ''; // Limpa a lista antes de adicionar novos itens

            try {
                const response = await fetch(`/api/recurso-educacional-aberto/autor/${autorId}`);
                if (!response.ok) {
                    throw new Error('Erro ao buscar recursos');
                }
                const recursos = await response.json();
                
                recursos.forEach(recurso => {
                    const li = document.createElement('li');
                    li.textContent = `Título: ${recurso.titulo}, Descrição: ${recurso.descricao}`;
                    recursosList.appendChild(li);
                });
            } catch (error) {
                const li = document.createElement('li');
                li.textContent = error.message;
                recursosList.appendChild(li);
            }
        }
    </script>
</body>
</html>
